{
  "name": "@kvenno/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "KvennaskÃ³linn Education Platform - Unified Monorepo",
  "author": "KvennaskÃ³linn",
  "license": "MIT",
  "scripts": {
    "dev:landing": "pnpm --filter @kvenno/landing dev",
    "dev:lab-reports": "pnpm --filter @kvenno/lab-reports dev",
    "dev:islenskubraut": "pnpm --filter @kvenno/islenskubraut dev",
    "dev:games": "pnpm --filter './apps/games/**' dev",
    "build": "node scripts/build-all.mjs",
    "build:landing": "pnpm --filter @kvenno/landing build",
    "build:lab-reports": "pnpm --filter @kvenno/lab-reports build",
    "build:islenskubraut": "pnpm --filter @kvenno/islenskubraut build",
    "build:games": "node scripts/build-games.mjs",
    "build:game": "node scripts/build-games.mjs --game",
    "build:year": "node scripts/build-games.mjs --year",
    "type-check": "pnpm --recursive run type-check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-all": "pnpm type-check && pnpm lint && pnpm format:check",
    "clean": "pnpm --recursive run clean && rm -rf node_modules dist",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@eslint/js": "^9.20.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.0",
    "@tailwindcss/vite": "^4.2.0",
    "eslint": "^9.20.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.15.0",
    "typescript-eslint": "^8.24.0",
    "husky": "^8.0.3",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^6.4.1",
    "vite-plugin-singlefile": "^2.0.1",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
