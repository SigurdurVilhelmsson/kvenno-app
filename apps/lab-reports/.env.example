# Comma-separated list of teacher email addresses for role-based access
# These are checked client-side for UI purposes only
VITE_TEACHER_EMAILS=teacher1@kvenno.is,teacher2@kvenno.is

# Base path for SPA routing (e.g., /efnafraedi/2-ar/lab-reports)
VITE_BASE_PATH=/lab-reports

# App mode: 'dual', 'teacher', or 'student'
VITE_APP_MODE=dual

# API endpoint for backend communication
VITE_API_ENDPOINT=/api

# Azure AD authentication
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_TENANT_ID=your-azure-tenant-id

# Set to 'true' to bypass authentication in development
VITE_BYPASS_AUTH=false
